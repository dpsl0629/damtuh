<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.damtuh.mapper.MemberMapper">

<resultMap id="memberResult" type="com.damtuh.member.vo.MemberVO">
		<result property="numberId" column="numberId"/> 
		<result property="name" column="name"/> 
		<result property="id" column="id"/> 
		<result property="pw" column="pw"/> 
		<result property="email" column="email"/> 
		<result property="zipcode" column="zipcode"/> 
		<result property="address1" column="address1"/> 
		<result property="address2" column="address2"/> 
		<result property="phone" column="phone"/> 
		<result property="birth" column="birth"/> 
		<result property="joinDate" column="joinDate"/> 
		<collection property="authList" resultMap="authMap"/>
	</resultMap>
	
	<resultMap type="com.damtuh.member.vo.AuthVO" id="authMap">
		<result property="userid" column="userid"/>
		<result property="auth" column="auth"/>
	</resultMap>
	
	<resultMap id="orderResult" type="com.damtuh.member.vo.OrderVO">
		
		<result property="deliveryId" column="deliveryId"/> 
		<result property="customerId" column="customerId"/> 
		<result property="productId" column="productId"/> 
		<result property="productImage" column="productImage"/> 
		<result property="productImage" column="productImage"/> 
		<result property="productName" column="productName"/> 
		<result property="quantity" column="quantity"/> 
		<result property="delivery" column="delivery"/> 
		<result property="productPrice" column="productPrice"/> 
		<result property="totalPrice" column="totalPrice"/> 
		<result property="point" column="point"/> 
		<result property="ordererName" column="ordererName"/> 
		<result property="ordererTel" column="ordererTel"/> 
		<result property="ordererPhone" column="ordererPhone"/> 
		<result property="ordererEmail" column="ordererEmail"/> 
		<result property="receiverName" column="receiverName"/> 
		<result property="receiverZip" column="receiverZip"/> 
		<result property="receiverAddress" column="receiverAddress"/> 
		<result property="receiverAddressDetail" column="receiverAddressDetail"/> 
		<result property="receiverTel" column="receiverTel"/> 
		<result property="receiverPhone" column="receiverPhone"/> 
		<result property="deliveryMemo" column="receiverMemo"/> 
		<result property="orderDate" column="orderDate"/> 
		<result property="ordererZip" column="ordererZip"/> 
		<result property="ordererAddress" column="ordererAddress"/> 
		<result property="ordererAddressDetail" column="ordererAddressDetail"/>
	</resultMap>
	
	<resultMap type="com.damtuh.member.vo.CommentVO" id="commentResult">
		<result property="deliveryNum" column="deliveryNum"/>
		<result property="productNum" column="productNum"/>
		<result property="userId" column="userId"/>
		<result property="content" column="content"/>
		<result property="likeCount" column="likeCount"/>
		<result property="writeDate" column="writeDate"/>
	</resultMap>
	
	<resultMap type="com.damtuh.member.vo.CommentOrderVO" id="commentOrderResult">
		<collection property="commentVO" resultMap="commentResult"/>
		<collection property="orderVO" resultMap="orderResult"/>
	</resultMap>
	
	<select id="idCheck" resultType="int">
	
		select count(*) from tbl_member where id = #{id}
	
	</select>
	
	<insert id="join">
		insert into tbl_member (numberid, name, id, pw, email, zipcode, address1, address2, phone, birth, joindate, enabled)
		values (seq_member.nextval, #{name}, #{id}, #{pw} , #{email}, #{zipcode}, #{address1}, #{address2}, #{phone}, #{birth}, sysdate, '1')
	</insert>
	
	<insert id="auth">
		insert into tbl_member_auth (userid, auth)
		values (#{id}, 'ROLE_MEMBER')
	</insert>

	<select id="read" resultMap="memberResult">
		SELECT
			mem.numberId, name, id, pw, email, zipcode, address1, address2, phone, birth, joindate, auth
			FROM
			tbl_member mem LEFT OUTER JOIN tbl_member_auth auth on mem.id = auth.userid
			WHERE mem.id=#{userid}
	</select>
	
	<select id="readOrder" resultMap="commentOrderResult">
		SELECT *
		 FROM customer_order, product_comment
		 WHERE customer_order.customerid = product_comment.userid and customer_order.deliveryid = product_comment.deliveryNum and customer_order.productid = product_comment.productnum and customer_order.customerid = #{customerId} ORDER BY customer_order.orderDate DESC
	</select>
	
	<update id="modify">
		UPDATE tbl_member set pw = #{pw}, email = #{email}, zipcode = #{zipcode}, address1 = #{address1}, address2 = #{address2}, phone = #{phone} where id = #{id}
	</update>
	
	<select id="modifyCheck" resultType="String">
		SELECT pw FROM tbl_member WHERE id = #{id}
	</select>
	
	<delete id="delete1">
		DELETE FROM tbl_member_auth WHERE userid in (SELECT id FROM tbl_member START WITH userid = #{id} CONNECT BY PRIOR id = userid)
	</delete>
	
	<delete id="delete2">
		DELETE FROM tbl_member WHERE id = #{id}
	</delete>
	
	<select id="readOrderDetail" resultMap="orderResult">
		SELECT * FROM customer_order WHERE customerId = #{customerId} and deliveryId = #{deliveryId}
	</select>
	
	<insert id="comment">
		UPDATE product_comment SET content=#{content}, likeCount=#{likeCount}, writeDate = sysdate WHERE productNum = #{productNum} AND deliveryNum = #{deliveryNum}
	</insert>
	
	<select id="selectComment" resultMap="orderResult">
		SELECT * FROM customer_order WHERE deliveryId = #{deliveryId}
	</select>
	
	<select id="productCommentConfirm" resultMap="commentResult">
		SELECT * FROM product_comment WHERE deliveryNum = #{deliveryId}
	</select>
</mapper>